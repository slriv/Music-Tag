=item --comment=s

=item --tracknum=s

=item --year=s

=item --releasedate=s

=item --sortname=s

=item --albumartist=s

=item --albumartist_sortname=s

=item --mb_artistid=s

=item --mb_albumid=s

=item --mb_trackid=s

=item --album_type=s

=item --artist_type=s

=item --lyrics=s

=item --picture=s

=item --url=s

=item --genre=s

=item --discnum=s

=item --tempo=s

=item --label=s

